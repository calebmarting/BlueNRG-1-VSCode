{
    "version": "2.0.0",
    "options":{
        "env":{
            "ARM_TOOLCHAIN_PATH":"${config:cortex-debug.armToolchainPath}",
            "ARM_TOOLCHAIN_VERSION":"${config:armToolchainVersion}"
        },
    },
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "command": "make",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make Clean",
            "type": "shell",
            "command": "make clean",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": "build"
        },
        {
            "label": "Make Depend",
            "type": "shell",
            "command": "make depend",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "group": "build"
        }
    ]
}